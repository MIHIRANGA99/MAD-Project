<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundprofiles"
    tools:context=".UpdateDog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/updateProPicSIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/propicbackground"
            app:shapeAppearanceOverlay="@style/Circular"
            android:padding="4dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/uploadImageBttn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/maroon"
            android:text="Upload new image"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:layout_marginHorizontal="110dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bttn_style_welcome"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dog Name"
            android:textColor="@color/maroon"
            android:layout_marginHorizontal="50dp"/>

        <EditText
            android:id="@+id/updateNameET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/maroon"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/inputtext"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dog Age"
            android:textColor="@color/maroon"
            android:layout_marginHorizontal="50dp"/>

        <EditText
            android:id="@+id/updateAgeET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/maroon"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/inputtext"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dog Gender"
            android:textColor="@color/maroon"
            android:layout_marginHorizontal="50dp"/>

        <EditText
            android:id="@+id/updateGenderET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/maroon"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/inputtext"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dog Breed"
            android:textColor="@color/maroon"
            android:layout_marginHorizontal="50dp"/>

        <EditText
            android:id="@+id/updateBreedET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/maroon"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/inputtext"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dog Weight"
            android:textColor="@color/maroon"
            android:layout_marginHorizontal="50dp"/>

        <EditText
            android:id="@+id/updateWeightET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/maroon"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/inputtext"/>

        <Button
            android:id="@+id/updateDetailsBttn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@color/maroon"
            android:text="Update"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bttn_style_welcome"/>


    </LinearLayout>

</RelativeLayout>