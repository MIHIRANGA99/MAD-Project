<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_dog"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FF8D41"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profilePic_card_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:shapeAppearanceOverlay="@style/Circular"
            app:strokeColor="@color/maroonHint"
            app:strokeWidth="2dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:background="@drawable/propicbackground"/>


        <TextView
            android:id="@+id/TVname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dog Name"
            android:textSize="20sp"
            android:textColor="@color/maroon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@id/profilePic_card_img"/>

        <TextView
            android:id="@+id/TVage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age"
            android:textSize="14sp"
            android:textColor="@color/maroon"
            android:layout_toRightOf="@id/profilePic_card_img"
            android:layout_below="@id/TVname"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"/>

        <ImageButton
            android:id="@+id/bttn_deleteDog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:layout_alignParentRight="true"

            android:background="@drawable/bttn_style_delete"
            android:src="@drawable/ic_delete_dog"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>