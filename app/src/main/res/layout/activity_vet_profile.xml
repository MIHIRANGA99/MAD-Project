<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VetProfile"
    android:background="@drawable/vet_profile">

    <ImageView
        android:id="@+id/vet_dp"
        android:layout_width="137dp"
        android:layout_height="128dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="136dp"
        app:srcCompat="@drawable/vet_dp" />

    <TextView
        android:id="@+id/doc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vet_dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Doctor name"
        android:textAllCaps="true"
        android:textColor="@color/maroon"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/adressTV"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_name"
        android:layout_marginStart="20sp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="ADDRESS"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/address_doc"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/adressTV"
        android:layout_marginEnd="30dp"
        android:background="@drawable/tv_vet"
        android:padding="10dp"
        android:text="ADDRESS"
        android:textAllCaps="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/contactTV"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_doc"
        android:layout_marginStart="20sp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="CONTACT DETAILS"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/phone_doc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/contactTV"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/tv_vet"
        android:padding="10dp"
        android:text="Phone"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mail_doc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/phone_doc"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/tv_vet"
        android:padding="10dp"
        android:text="e-mail"
        android:textSize="20sp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail_doc"
        android:layout_marginStart="80dp"
        android:layout_marginTop="31dp"
        android:numStars="5" />

</RelativeLayout>